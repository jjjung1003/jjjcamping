<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybats-3-mapper.dtd">
	
<mapper namespace="kr.co.jjjcamping.dao.CsDao">

	<insert id="write_ok" parameterType="kr.co.jjjcamping.dto.CsDto">
		insert into cs(name,userid,title,content,writeday)
  		values(#{name},#{userid},#{title},#{content},now())
	</insert>
	
	<select id="list" resultType="kr.co.jjjcamping.dto.CsDto">
  		select * from cs
  		where ${param1}
  		like concat('%',#{param2},'%')
  		order by id desc
  		limit #{param3}, 10	
  	</select>

	<select id="list_cnt" resultType="int">
  		select count(*) from cs
  		where ${param1} like concat('%',#{param2},'%')
  	</select>
  	
  	<select id="content" resultType="kr.co.jjjcamping.dto.CsDto">
  		select * from cs
  		where id=#{param}
  	</select>
  
  	<delete id="delete">
  		delete from cs
  		where id=#{param}
  	</delete>




</mapper>




